{

  "manifest_version": 2,
  "name": "Hotkey Tabs",
  "version": "0.1.6a1",
  "description": "Quick switching and loading of commonly used webpages via hotkeys.",
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "96": "img/logo-96.png"
  },

  "background": {
    "scripts": ["background-script.js"]
  },

  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "contextMenus"
  ],

  "options_ui": {
    "page": "options/options.html"
  },

  "commands": {
    "alt1": {
      "suggested_key": {
        "default": "Alt+1"
      },
      "description": "Hotkey Tabs: Switch tab 1"
    },
    "alt2": {
      "suggested_key": {
        "default": "Alt+2"
      },
      "description": "Hotkey Tabs: Switch tab 2"
    }
  }

}
