{

  "manifest_version": 2,
  "name": "Hotkey Tabs",
  "version": "0.1.6a1",
  "description": "Quick switching and loading of commonly used webpages via hotkeys.",
  "icons": {
    "16": "img/logo-16.png",
    "32": "img/logo-32.png",
    "48": "img/logo-48.png",
    "96": "img/logo-96.png"
  },

  "background": {
    "scripts": ["background-script.js"]
  },

  "content_scripts": [
  {
    "matches": ["<all_urls>"],
    "js": ["hotkey.js"]
  }
],

  "permissions": [
    "tabs",
    "notifications",
    "storage",
    "contextMenus"
  ],

  "options_ui": {
    "page": "options/options.html"
  }

}
